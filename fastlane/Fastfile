default_platform(:ios)

BASE_BUNDLE_ID = 'com.github.abeyuya.Twibu'
BASE_BUNDLE_IDS = [
  BASE_BUNDLE_ID,
  "#{BASE_BUNDLE_ID}.today-extension",
  "#{BASE_BUNDLE_ID}.action-extension"
]

platform :ios do
  lane :setup_local do
    if is_ci
      p 'localhost only'
      return
    end

    match(
      app_identifier: BASE_BUNDLE_IDS,
      team_id: '37XL3EDJ44',
      type: 'development',
      readonly: false
    )

    match(
      app_identifier: BASE_BUNDLE_IDS,
      team_id: '37XL3EDJ44',
      type: 'adhoc',
      readonly: false
    )

    match(
      app_identifier: BASE_BUNDLE_IDS,
      team_id: '37XL3EDJ44',
      type: 'appstore',
      readonly: false
    )
  end

  desc 'Import Certificates for GitHub Actions'
  private_lane :import_certificates_for_actions do
    setup_ci(
      force: true,
      provider: 'travis',
    )

    sync_code_signing(
      app_identifier: [
        'com.github.abeyuya.Twibu',
        'com.github.abeyuya.Twibu.today-extension',
        'com.github.abeyuya.Twibu.action-extension'
      ],
      team_id: '37XL3EDJ44',
      git_url: 'https://github.com/abeyuya/fastlane-match',
      git_basic_authorization: ENV['PERSONAL_ACCESS_TOKEN_GITHUB'],
      type: 'adhoc',
      readonly: true
    )
  end

  desc 'Import Certificates for AppStore'
  private_lane :import_certificates_for_appstore do
    setup_ci(
      force: true,
      provider: 'travis',
    )

    sync_code_signing(
      app_identifier: [
        'com.github.abeyuya.Twibu',
        'com.github.abeyuya.Twibu.today-extension',
        'com.github.abeyuya.Twibu.action-extension'
      ],
      team_id: '37XL3EDJ44',
      git_url: 'https://github.com/abeyuya/fastlane-match',
      git_basic_authorization: ENV['PERSONAL_ACCESS_TOKEN_GITHUB'],
      type: 'appstore',
      readonly: true
    )
  end

  desc 'Push a new beta build to Firebase App Distribution'
  lane :app_distribution do
    if is_ci
      import_certificates_for_actions
    end

    cocoapods

    build_app(
      scheme: 'Twibu',
      configuration: 'Release',
      export_options: {
        method: 'ad-hoc',
        provisioningProfiles: {
          'com.github.abeyuya.Twibu' => 'match AdHoc com.github.abeyuya.Twibu',
          'com.github.abeyuya.Twibu.today-extension' => 'match AdHoc com.github.abeyuya.Twibu.today-extension',
          'com.github.abeyuya.Twibu.action-extension' => 'match AdHoc com.github.abeyuya.Twibu.action-extension'
        }
      }
    )

    firebase_app_distribution(
      app: '1:963268268624:ios:15295e2f01e253f7',
      groups: 'all',
      release_notes: 'from github-actions!',
      firebase_cli_path: `which firebase`.strip()
    )
  end

  desc 'Submit ipa to AppStoreConnect'
  lane :submit_appstore do
    if is_ci
      import_certificates_for_appstore
    end

    cocoapods

    build_app(
      scheme: 'Twibu',
      configuration: 'Release',
      include_bitcode: true,
      export_options: {
        method: 'app-store',
        provisioningProfiles: {
          'com.github.abeyuya.Twibu' => 'match AppStore com.github.abeyuya.Twibu',
          'com.github.abeyuya.Twibu.today-extension' => 'match AppStore com.github.abeyuya.Twibu.today-extension',
          'com.github.abeyuya.Twibu.action-extension' => 'match AppStore com.github.abeyuya.Twibu.action-extension'
        }
      }
    )

    upload_to_app_store
  end
end
